extends layout

block content
  // Centered content
  .center-content-index 

    // Header displaying the BookInstance ID
    h1 ID: #{bookinstance._id}

    // Link to the BookInstance's book's detail page
    p #[strong Title: ]
      a(href=bookinstance.book.url) #{bookinstance.book.title}

    // Imprint of the BookInstance
    p #[strong Imprint:] #{bookinstance.imprint}

    // Status of the BookInstance
    p #[strong Status: ]
      if bookinstance.status=='Available'
        span.text-success #{bookinstance.status}
      else if bookinstance.status=='Maintenance'
        span.text-danger #{bookinstance.status}
      else
        span.text-warning #{bookinstance.status}

    // Due back date if not available
    if bookinstance.status!='Available'
      p #[strong Due back:] #{bookinstance.due_back_formatted}

    // Horizontal line separator
    hr

    // Link to delete the BookInstance
    p
      a(href=bookinstance.url+'/delete') Delete instance

    // Link to update the BookInstance
    p
      a(href=bookinstance.url+'/update') Update
